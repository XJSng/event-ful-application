{{#extends "base"}}

{{#block "title"}}
Update {{event.title}}
{{/block}}

{{#block "content"}}
<h2 class="mt-3">Update {{event.title}}</h2>
<form action="/event/{{event.event_id}}/update" method="POST">
    <div>
        <label for="title">Title:</label>
        <input type="text" id="title" name="title" class="form-control" value="{{event.title}}" required>
    </div>
    <div>
        <label for="date">Date: </label>
        <input type="date" id="date" name="date" class="form-control" value="{{event.date}}" required>
    </div>
     <div>
        <label for="time">Time: </label>
        <input type="time" id="time" name="time" class="form-control" value="{{event.time}}">
    </div>
    <div>
                <label for="location">Location:</label>
        <input type="text" id="location" name="location" class="form-control" value="{{event.location}}" required>
    </div>
<div>
        <label for="organiser">Event Organiser:</label>
        <select id="organiserId" name="organiser_id" class="form-control" required>
            <option id="0" value="{{event.organiser_id}}">{{event.organiser_name}}</option>
            {{#each organiser}}
            <option value="{{this.organiser_id}}">{{this.name}}
                {{/each}}
            </option>
        </select>
    </div>
    <div>
        <label for="participant">Event Participant:</label>
        <select id="participantId" name="participant_id" class="form-control" required>
            <option id="0" value="{{event.participant_id}}">{{event.name}}</option>
            {{#each participant}}
            <option value="{{this.participant_id}}">{{this.name}}
                {{/each}}
            </option>
        </select>
    </div>
    <button type="submit" class="mt-3 btn btn-primary">Update Organiser</button>
</form>

{{/block}}
{{/extends}}