{{#extends "base"}}

{{#block "title"}}
Create New Event
{{/block}}

{{#block "content"}}
<h2 class="mt-3">Create New Event</h2>
<form action="/event/create" method="POST">
    <div>
        <label for="title">Event Title:</label>
        <input type="text" id="title" name="title" class="form-control" required>
    </div>
    <div>
        <label for="date">Event Date:</label>
        <input type="date" id="date" name="date" class="form-control" required>
    </div>
    <div>
        <label for="time">Event Time:</label>
        <input type="time" id="time" name="time" class="form-control" required>
    </div>
    <div>
        <label for="location">Event Location:</label>
        <input type="text" id="location" name="location" class="form-control" required>
    </div>

    <div>
        <label for="organiser">Event Organiser:</label>
        <select id="organiserId" name="organiser_id" class="form-control" required>
            <option id="0">--------</option>
                {{#each organiser}}
            <option value="{{this.organiser_id}}">{{this.name}}
                {{/each}}
            </option>
        </select>
    </div>
    <div>
           <label for="participant">Event Participant:</label>
        <select id="participantId" name="participant_id" class="form-control" required>
            <option id="0">--------</option>
                {{#each participant}}
            <option value="{{this.participant_id}}">{{this.name}}
                {{/each}}
            </option>
        </select>
          </div>

    <button type="submit" class="mt-3 btn btn-primary">Create Event</button>
</form>

{{/block}}
{{/extends}}