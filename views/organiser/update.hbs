{{#extends "base"}}

{{#block "title"}}
Update {{organiser.name}}
{{/block}}

{{#block "content"}}
<h2 class="mt-3">Update {{organiser.name}}</h2>
<form action="/organiser/{{organiser.organiser_id}}/update" method="POST">
    <div>
        <label for="name">Name:</label>
        <input type="text" id="name" name="name" class="form-control" value="{{organiser.name}}" required>
    </div>
    <div>
        <label for="contact_number">Contact Number:</label>
        <input type="text" id="contact_number" name="contact_number" class="form-control" value="{{organiser.contact_number}}" required>
    </div>
    <div>
                <label for="email">Email:</label>
        <input type="text" id="email" name="email" class="form-control" value="{{organiser.email}}" required>
    </div>

    <button type="submit" class="mt-3 btn btn-primary">Update Organiser</button>
</form>

{{/block}}
{{/extends}}