{{#extends "base"}}
{{#block "title"}}
Organiser
{{/block}}

{{#block "content"}}

<div class="container">
    <div class="row">
        <div class="col-10">
            <h2 class="mt-3">Event List</h2>
        </div>
        <div class="col-2"><a href="/event/create" class="mt-3 btn btn-success">Add New
                Event</a></div>
    </div>
</div>

<table class="table">
    <thead>
        <tr>
            <th>ID</th>
            <th>Title</th>
            <th>Date</th>
            <th>Time</th>
            <th>Location</th>
            <th>Organiser</th>
            <th>Participant</th>
            <th></th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        {{#each event}}
        <tr>
            <td>{{this.event_id}}</td>
            <td>{{this.title}}</td>
            <td>{{moment this.date_time format="DD MMM YY" }}</td>
            <td>{{moment this.date_time format="hh:mm a" }}</td>
            <td>{{this.location}}</td>
            <td>{{this.organiser_name}}</td>
            <td>{{this.name}}</td>
            <td><a href="/event/{{this.event_id}}/update" class="btn btn-primary btn-sm">Update</a></td>
            <td> <a href="/event/{{this.event_id}}/delete" class="btn btn-danger btn-sm">Delete</a></td>
        </tr>
        {{/each}}
    </tbody>
</table>

{{/block}}

{{#block "searchResults"}}
  {{/block}}

{{/extends}}