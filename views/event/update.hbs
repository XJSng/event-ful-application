{{#extends "base"}}

{{#block "title"}}
Update {{event.title}}
{{/block}}

{{#block "content"}}
<h2 class="mt-3">Update {{event.title}}</h2>
<form action="/event/{{event.event_id}}/update" method="POST">
    <div>
        <label for="name">Title:</label>
        <input type="text" id="name" name="name" class="form-control" value="{{event.title}}" required>
    </div>
    <div>
        <label for="date">Curent Date: {{moment this.date format="L" }}</label>
        <input type="date" id="date" name="date" class="form-control" value="{{this.date}}" placeholder="{{this.date}}" required>
    </div>
     <div>
        <label for="time">Time:</label>
        <input type="time" id="time" name="time" class="form-control" value="{{this.time}}" placeholder="{{this.time}}">
    </div>
    <div>
                <label for="location">Location:</label>
        <input type="text" id="location" name="location" class="form-control" value="{{event.location}}" required>
    </div>

    <button type="submit" class="mt-3 btn btn-primary">Update Organiser</button>
</form>

{{/block}}
{{/extends}}