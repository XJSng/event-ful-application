{{#extends "base"}}
{{#block "title"}}
Event-ful Application

{{/block}}
{{#block "content"}}

<h2 class="mt-4">Event-ful is a events management system to explore new experiences</h2>
<form method="POST">
    <input type="text" name="searchTerms" class="form-control" placeholder="Search for some upcoming events" />
    <input type="submit" id="searchTerms" class="btn btn-primary mt-2 ms-2" value="Search" />
</form>
<div class="container mt-4" id="resultsContainer">

    <h2 class="mt-3">Results List</h2>
    <table class="table">
        <thead>
            <tr>
                <th>ID</th>
                <th>Title</th>
                <th>Date</th>
                <th>Time</th>
                <th>Location</th>
                <th>Organiser</th>
                <th>Participant</th>
                <th></th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            {{#each event}}
            <tr>
                <td>{{this.event_id}}</td>
                <td>{{this.title}}</td>
                <td>{{moment this.date_time format="DD MMM YY" }}</td>
                <td>{{moment this.date_time format="hh:mm a" }}</td>
                <td>{{this.location}}</td>
                <td>{{this.organiser_name}}</td>
                <td>{{this.name}}</td>
                <td><a href="/event/{{this.event_id}}/update" class="btn btn-primary btn-sm">Update</a></td>
                <td> <a href="/event/{{this.event_id}}/delete" class="btn btn-danger btn-sm">Delete</a></td>
            </tr>
            {{/each}}
        </tbody>
    </table>
</div>

{{/block}}

{{/extends}}