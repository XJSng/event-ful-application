{{#block "content"}}
{{#extends 'base'}}

{{#block "content"}}
<div class="container">
    <div class="row">
        <div class="col-10">
            <h2 class="mt-3">Organiser List</h2>
        </div>
        <div class="col-2"><a href="/organiser/create" class="mt-3 btn btn-success">Add New
                Organiser</a></div>
    </div>
</div>
</div>

<table class="table">
    <thead>
        <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Contact Number</th>
            <th>Email</th>
            <th></th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        {{#each organiser}}
        <tr>
            <td>{{this.organiser_id}}</td>
            <td>{{this.name}}</td>
            <td>{{this.contact_number}}</td>
            <td>{{this.email}}</td>
            <td><a href="/organiser/{{this.organiser_id}}/update" class="btn btn-primary btn-sm">Update</a></td>
            <td> <a href="/organiser/{{this.organiser_id}}/delete" class="btn btn-danger btn-sm">Delete</a></td>
        </tr>
        {{/each}}
    </tbody>
</table>

{{/block}}

{{/extends}}
